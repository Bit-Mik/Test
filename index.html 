    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const slipBtn = document.getElementById('slip-btn');
            const tripBtn = document.getElementById('trip-btn');
            const slipContent = document.getElementById('slip-content');
            const tripContent = document.getElementById('trip-content');
            const mobileNav = document.getElementById('mobile-nav');

            slipBtn.addEventListener('click', () => {
                slipContent.classList.remove('hidden');
                tripContent.classList.add('hidden');
                slipBtn.classList.add('active');
                tripBtn.classList.remove('active');
            });

            tripBtn.addEventListener('click', () => {
                tripContent.classList.remove('hidden');
                slipContent.classList.add('hidden');
                tripBtn.classList.add('active');
                slipBtn.classList.remove('active');
            });

            mobileNav.addEventListener('change', (e) => {
                const targetId = e.target.value;
                if (targetId) {
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        targetElement.scrollIntoView({ behavior: 'smooth' });
                    }
                }
            });

            const ctx = document.getElementById('fall-chart').getContext('2d');
            const fallChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Falls on Same Level (from Slips/Trips)', 'Falls from a Height'],
                    datasets: [{
                        label: 'Types of Falls',
                        data: [67, 33],
                        backgroundColor: [
                            '#3b82f6', // blue-500
                            '#ef4444'  // red-500
                        ],
                        borderColor: [
                            '#ffffff',
                            '#ffffff'
                        ],
                        borderWidth: 4,
                        hoverOffset: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '60%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                font: {
                                    size: 14
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed !== null) {
                                        label += context.parsed + '%';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
